<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cocoadrillosoftware.rosterquiz.ShowStudent">

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:id="@+id/studentImage"
        android:layout_alignParentTop="true"
        android:src="@drawable/user_400"
        android:maxWidth="10dp"
        android:maxHeight="10dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notes:"
        android:id="@+id/notesLabel"
        android:layout_above="@+id/lastLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="72dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last:"
        android:id="@+id/lastLabel"
        android:layout_above="@+id/firstLabel"
        android:layout_alignRight="@+id/yearLabel"
        android:layout_alignEnd="@+id/yearLabel"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First:"
        android:id="@+id/firstLabel"
        android:layout_above="@+id/yearLabel"
        android:layout_alignLeft="@+id/yearLabel"
        android:layout_alignStart="@+id/yearLabel"
        android:layout_marginBottom="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Year:"
        android:id="@+id/yearLabel"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/notesLabel"
        android:layout_alignEnd="@+id/notesLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yearText"
        android:layout_alignBottom="@+id/yearLabel"
        android:layout_alignLeft="@+id/studentImage"
        android:layout_alignStart="@+id/studentImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstText"
        android:layout_alignBottom="@+id/firstLabel"
        android:layout_alignLeft="@+id/yearText"
        android:layout_alignStart="@+id/yearText"
        android:layout_alignRight="@+id/yearText"
        android:layout_alignEnd="@+id/yearText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastText"
        android:layout_alignBottom="@+id/lastLabel"
        android:layout_alignLeft="@+id/firstText"
        android:layout_alignStart="@+id/firstText"
        android:layout_alignRight="@+id/firstText"
        android:layout_alignEnd="@+id/firstText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notesText"
        android:layout_alignLeft="@+id/lastText"
        android:layout_alignStart="@+id/lastText"
        android:layout_alignRight="@+id/lastText"
        android:layout_alignEnd="@+id/lastText"
        android:layout_below="@+id/studentImage"
        android:layout_above="@+id/lastText" />

</RelativeLayout>
